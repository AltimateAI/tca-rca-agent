# TCA RCA Agent - Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================================================
# REQUIRED: Claude API
# ============================================================================
TCA_ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# ============================================================================
# REQUIRED: Sentry Configuration
# ============================================================================
TCA_SENTRY_ORG=your-sentry-org
TCA_SENTRY_AUTH_TOKEN=your-sentry-auth-token

# ============================================================================
# REQUIRED: GitHub Configuration
# ============================================================================
TCA_GITHUB_OWNER=your-github-org
TCA_GITHUB_REPO=your-repo-name
TCA_GITHUB_TOKEN=ghp_your-github-token-here

# ============================================================================
# OPTIONAL: Mem0 (Memory System)
# ============================================================================
MEM0_API_KEY=your-mem0-api-key
MEM0_ORG_ID=your-mem0-org-id
MEM0_PROJECT_ID=your-mem0-project-id
MEM0_USER_ID=tca-rca-agent

# ============================================================================
# OPTIONAL: SignOz (Observability)
# ============================================================================
SIGNOZ_BASE_URL=https://your-signoz-instance.com
SIGNOZ_API_KEY=your-signoz-api-key

# ============================================================================
# OPTIONAL: PostHog (Product Analytics)
# ============================================================================
POSTHOG_API_KEY=your-posthog-api-key
POSTHOG_PROJECT_ID=your-project-id

# ============================================================================
# OPTIONAL: AWS (Infrastructure Monitoring)
# ============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# ============================================================================
# OPTIONAL: Slack Notifications
# ============================================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your-webhook-url

# ============================================================================
# Application Settings
# ============================================================================
# API Port (default: 8000)
PORT=8000

# Dashboard URL (default: http://localhost:3001)
NEXT_PUBLIC_API_URL=http://localhost:8000

# Log Level (debug, info, warning, error)
LOG_LEVEL=info
